<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <%- include('./lingue.ejs') %>
        <title>
            <%= lingue[0].nuxta %>
        </title>
</head>

<body>
    <!-- Start Top Bar -->
    <div class="top-bar">
        <div class="top-bar-left">
            <ul class="menu">
                <a href="/">
                    <div class="color-menu">
                        <li class="menu-text">
                            <div class="glitch" data-text="Nuxta">
                                <%= lingue[0].nuxta %>
                            </div>
                        </li>
                    </div>
                </a>
            </ul>
        </div>
    </div>
    <!-- End Top Bar -->
    <ul class="text-center">
        <div class="login-box">
            <h2>
                <%= lingue[0].signup %>
            </h2>
            <form action="/singup" method="post">
                <div class="user-box">
                    <input type="text" name="wallet">
                    <label><%= lingue[0].username %></label>
                </div>
                <div class="user-box">
                    <input type="password" name="password">
                    <label><%= lingue[0].password %></label>
                </div>
                <div class="user-box">
                    <input type="text" name="nome">
                    <label><%= lingue[0].name_island%></label>
                </div>
                <button><%= lingue[0].signup %></button>
            </form>
            <div class="button-signup">
                <form action="/login">
                    <button><%= lingue[0].login %></button>
                </form>
            </div>
        </div>
    </ul>

</body>
<style type="text/css">
    body {
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        background: linear-gradient(#141e30, #243b55);
    }
</style>

</html>