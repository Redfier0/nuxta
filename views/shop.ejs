<body>
    <%- include("./components/principali.ejs") %>
        <div class="isola">
            <a href="/generale">
                <button>torna all'isola</button>
            </a>
            <a href="/vendi">
                <button>vendi</button>
            </a><br>
        </div>
        <h2>
            token
            <%= token[0].token %>
        </h2><br>
        <% cibo.forEach((item)=>{ %>
            <form action="/shop" method="post" name="cibo">
                <input type="hidden" value="<%= item.id %>" name="inputCibo">
                <% const id = item.id - 1 %>
                    <button class="btn btn-outline-success"> compra <%= item.nome %><h3>quantità <%= quantita[id].quantita %></h3></button>
            </form>
            <% }) %>
                <% persone.forEach((item)=>{ %>
                    <form action="/shop" method="post" name="persone">
                        <input type="hidden" value="<%= item.id %>" name="inputPersone">
                        <button class="btn btn-outline-success"> compra <%= item.nome %><h3>quantità <%= quantitaPersone[0].quantita %></h3></button>
                    </form>
                    <% }) %>
                        <% strutture.forEach((item)=>{ %>
                            <form action="/shop" method="post" name="strutture">
                                <input type="hidden" value="<%= item.id %>" name="inputStrutture">
                                <% const id = item.id - 1 %>
                                    <button class="btn btn-outline-success"> compra <%= item.nome %>  <h3>quantità <%= quantitaStrutture[id].quantita %></h3></button>
                            </form>
                            <% }) %>


</body>

