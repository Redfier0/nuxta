            <ul class="menu">

                <a href="/">
                    <div class="color-menu">
                        <li class="menu-text">
                            <div class="glitch" data-text="Nuxta">
                                <%= lingue[0].nuxta %>
                            </div>
                        </li>
                    </div>
                </a>
                <% if(loggato == true){ %>
                    <li>
                        <a href="/generale">
                            <div class="href-grandezza">Vai All'Isola
                            </div>
                        </a>
                    </li>
                    <% } %>
            </ul>
        </div>
        <div class="top-bar-right">
            <ul class="menu">
                <% if(loggato == true){ %>
                    <li>
                        <a href="/logout">
                            <div class="href-grandezza">
                                <%= lingue[0].logout %>
                            </div>
                        </a>
                    </li>
                    <% }else{ %>
                        <li>
                            <a href="/login">
                                <div class="href-grandezza">
                                    <%= lingue[0].login %>
